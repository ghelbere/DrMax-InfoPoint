<UserControl x:Class="InfoPointUI.Controls.DrMaxCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="360" d:DesignHeight="220">
    <Grid>
        <!-- Card frame -->
        <Border CornerRadius="12"
                Background="White"
                BorderBrush="#303030"
                BorderThickness="2"
                SnapsToDevicePixels="True">
            <Button Click="OnScanClicked">
                <Grid Margin="14">
                    <Grid.ColumnDefinitions>
                        <!--<ColumnDefinition Width="160"/>-->
                        <!-- logo -->
                        <ColumnDefinition Width="*"/>
                        <!-- text area -->
                        <ColumnDefinition Width="120"/>
                        <!-- barcode -->
                    </Grid.ColumnDefinitions>

                    <!-- Dr.Max logo (vector) -->
                    <Grid Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                      Width="150" Height="80">
                        <!-- green capsule -->
                        <Border CornerRadius="24" Background="#19A647" />
                        <!-- white inner capsule to mimic brand outline -->
                        <Border Margin="6" CornerRadius="20" Background="White" />
                        <!-- red Dr.Max text -->
                        <TextBlock Text="Dr.Max"
                               Foreground="#E1251B"
                               FontWeight="Bold"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                        <!-- green plus in upper-right of the text area -->
                        <TextBlock Text="+"
                               Foreground="#19A647"
                               FontWeight="Bold"
                               FontSize="18"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="0,6,10,0"/>
                    </Grid>
                    <!-- Center text (you control this from outside) -->
                    <TextBlock Grid.Column="1"
                           Text="{Binding CardText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextWrapping="NoWrap"
                           FontSize="{Binding CenterTextSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontWeight="Bold"
                           Foreground="{Binding CenterTextBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <!-- Stylized barcode (generated from string via simple pattern) -->
                    <Grid Grid.Column="2" Margin="6,0,0,0" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Optional label (hidden by default) -->
                        <TextBlock Grid.Row="0"
                               Text="{Binding BarcodeLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               Foreground="#505050"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               Visibility="{Binding IsBarcodeLabelVisible, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                        <!-- Bars container -->
                        <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding BarcodePattern, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Rectangle Fill="Black"
                                           Width="{Binding}"
                                           Height="100"
                                           Margin="1,0,0,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Human-readable code -->
                        <TextBlock Grid.Row="2"
                               Text="{Binding BarcodeValue, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               Foreground="#303030"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                    </Grid>
                </Grid>
            </Button>
        </Border>
    </Grid>
        
</UserControl>
