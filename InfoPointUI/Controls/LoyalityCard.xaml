<UserControl x:Class="InfoPointUI.Controls.LoyalityCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="160">
    <Grid>
        <!-- Cardul -->
        <Border CornerRadius="12"
                BorderBrush="Black"
                BorderThickness="2"
                Background="White"
                SnapsToDevicePixels="True">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <!-- simbol farmacie -->
                    <ColumnDefinition Width="*"/>
                    <!-- spațiu text -->
                    <ColumnDefinition Width="80"/>
                    <!-- cod de bare -->
                </Grid.ColumnDefinitions>

                <!-- Simbol farmacie -->
                <Viewbox Grid.Column="0" Stretch="Uniform">
                    <Canvas Width="50" Height="50">
                        <Ellipse Stroke="Black" StrokeThickness="2" Width="50" Height="50"/>
                        <Rectangle Fill="Black" Width="10" Height="30" Canvas.Left="20" Canvas.Top="10"/>
                        <Rectangle Fill="Black" Width="30" Height="10" Canvas.Left="10" Canvas.Top="20"/>
                    </Canvas>
                </Viewbox>

                <!-- Placeholder pentru text (îl suprapui din aplicație) -->
                <TextBlock Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Text="{Binding CardText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="Black"/>

                <!-- Cod de bare stilizat -->
                <Canvas Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Rectangle Fill="Black" Width="2" Height="100" Canvas.Left="5" Canvas.Top="20"/>
                    <Rectangle Fill="Black" Width="4" Height="100" Canvas.Left="12" Canvas.Top="20"/>
                    <Rectangle Fill="Black" Width="2" Height="100" Canvas.Left="20" Canvas.Top="20"/>
                    <Rectangle Fill="Black" Width="6" Height="100" Canvas.Left="28" Canvas.Top="20"/>
                    <Rectangle Fill="Black" Width="2" Height="100" Canvas.Left="38" Canvas.Top="20"/>
                    <Rectangle Fill="Black" Width="4" Height="100" Canvas.Left="46" Canvas.Top="20"/>
                    <Rectangle Fill="Black" Width="2" Height="100" Canvas.Left="54" Canvas.Top="20"/>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</UserControl>
