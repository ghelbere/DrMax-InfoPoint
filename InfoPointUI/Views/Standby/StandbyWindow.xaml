<Window x:Class="InfoPointUI.Views.StandbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" WindowState="Maximized" 
        Background="{StaticResource PharmacyGreen}" 
        Cursor="None"
        Topmost="True" ShowInTaskbar="False">

    <Window.Resources>
        <Storyboard x:Key="LogoBounceAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                           From="1.0" To="1.1" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                           From="1.0" To="1.1" Duration="0:0:1.5"/>
        </Storyboard>

        <Storyboard x:Key="TextPulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation 
                Storyboard.TargetName="InstructionText"
                Storyboard.TargetProperty="Opacity"
                           From="0.4" To="1.0" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border x:Name="LogoBorder" 
                    Width="280" Height="280" CornerRadius="140" 
                    Background="White" Margin="0,0,0,60"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform/>
                </Border.RenderTransform>
                <Image Source="/Assets/Images/drmax_logo.png" 
                       Stretch="Uniform" Margin="40"/>
            </Border>

            <TextBlock Text="Bine ați venit!" 
                       Foreground="White" FontSize="42" FontWeight="SemiBold"
                       FontFamily="{StaticResource BahnschriftFont}" HorizontalAlignment="Center" 
                       Margin="0,0,0,25" TextAlignment="Center"/>

            <TextBlock x:Name="InstructionText"
           Text="Apropiați-vă sau atingeți ecranul pentru a continua"
           HorizontalAlignment="Center"
           VerticalAlignment="Bottom"
           Margin="20" FontSize="20"
           FontFamily="{StaticResource BahnschriftFont}"
           Foreground="White"
           RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TextBlock.RenderTransform>
            </TextBlock>
            
            
        </StackPanel>

        <Border Background="Transparent"/>
    </Grid>
</Window>