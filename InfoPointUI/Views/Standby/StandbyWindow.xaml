<Window x:Class="InfoPointUI.Views.StandbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" WindowState="Maximized" 
        Background="{StaticResource PharmacyGreen}" 
        Topmost="True" ShowInTaskbar="False">

    <Window.Resources>
        <!-- Bounce Animation for Logo -->
        <Storyboard x:Key="LogoBounceAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                           From="1.0" To="1.1" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                           From="1.0" To="1.1" Duration="0:0:1.5"/>
        </Storyboard>

        <!-- Pulse Animation for Text -->
        <Storyboard x:Key="TextPulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.7" To="1.0" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Main Content Container -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- DrMax Logo with Bounce Animation -->
            <Border x:Name="LogoBorder" 
                    Width="280" 
                    Height="280" 
                    CornerRadius="140" 
                    Background="White" 
                    Margin="0,0,0,60"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform/>
                </Border.RenderTransform>
                <Image Source="/InfoPointUI;component/Assets/Images/drmax_logo.png" 
                       Stretch="Uniform" 
                       Margin="40"/>
            </Border>

            <!-- Welcome Message -->
            <TextBlock Text="Bine ați venit!" 
                       Foreground="White" 
                       FontSize="42" 
                       FontWeight="SemiBold"
                       FontFamily="Bahnschrift"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,25"
                       TextAlignment="Center"/>

            <!-- Instruction Text with Pulse Animation -->
            <TextBlock x:Name="InstructionText"
                       Text="Atingeți ecranul pentru a începe" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Light"
                       FontFamily="Bahnschrift"
                       HorizontalAlignment="Center" 
                       Opacity="0.7"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- Full Screen Touch Area -->
        <Border Background="Transparent" Cursor="Hand"/>
    </Grid>
</Window>