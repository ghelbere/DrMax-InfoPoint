<Window x:Class="InfoPointUI.Views.ProductDetails.ProductDetailsWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InfoPointUI.ViewModels"
        Title="Detalii Produs" Height="500" Width="700"
        Background="#FFF9F9F9" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Topmost="True" ShowInTaskbar="False"
        Loaded="Window_Loaded">

    <Border BorderThickness="2" CornerRadius="6" BorderBrush="{StaticResource PharmacyGreen}" Background="#FFF9F9F9">
        <Frame x:Name="FrameHost" NavigationUIVisibility="Hidden"
           Navigating="MainFrame_Navigating"
           Navigated="MainFrame_Navigated"/>
    </Border>
</Window>

