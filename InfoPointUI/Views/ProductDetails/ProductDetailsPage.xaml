<Page x:Class="InfoPointUI.Views.ProductDetails.ProductDetailsPage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoPointUI.Views.ProductDetails"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetailsPage">

    <Page.Resources>
        <!-- Stil pentru butoane rotunjite cu font mai mare -->
        <Style TargetType="Button" x:Key="RoundedButtonLargeFont">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <!-- Rânduri -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Coloane -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Rândul 1 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Tag="CloseWindow" Content="Înapoi" Width="88" Height="42" Margin="0,0,12,0" Background="White" Style="{StaticResource RoundedButtonLargeFont}"/>
            <Button Tag="CloseWindow" Content="Home" Width="88" Height="42" Background="White" Style="{StaticResource RoundedButtonLargeFont}" Visibility="Hidden"/>
        </StackPanel>

        <Image Grid.Row="0" Grid.Column="1" Source="/Assets/Images/drmax_logo.png" 
               RenderOptions.BitmapScalingMode="HighQuality"
               Height="42" 
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="0,-10,30,0"/>

        <!-- Rândul 2 -->
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="DETALII PRODUS" FontSize="22" FontWeight="Bold"
                Foreground="DarkGray" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- Rândul 3 -->
        <Image Grid.Row="2" Grid.Column="0" Source="{Binding Product.ProductImage}" 
               RenderOptions.BitmapScalingMode="HighQuality"
               Height="150" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"/>

        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Margin="20,0,0,0">
            <TextBlock Text="{Binding Product.Name}" FontSize="20" FontWeight="Bold" Foreground="#333" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Product.Description}"
                    FontSize="16" Foreground="#666" Margin="0,10,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Product.Price, StringFormat={}{0:N2} RON}" FontSize="22" FontWeight="Bold" Foreground="#333" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Rândul 4 -->
        <Button Grid.Row="3" Grid.Column="0" Content="Localizează" Background="#2E7D32" Foreground="White"
             Command="{Binding LocalizeazaCommand}" Width="187" Name="ToMapButton" Height="55" HorizontalAlignment="Right" Margin="0,15,10,0" Style="{StaticResource RoundedButtonLargeFont}"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Cheamă consultant" Background="White" Foreground="Black"
             Command="{Binding CallConsultantCommand}" Width="187" Height="55" HorizontalAlignment="Left" Margin="10,15,0,0" Style="{StaticResource RoundedButtonLargeFont}"/>
    </Grid>

</Page>
