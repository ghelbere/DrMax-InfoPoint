<Window x:Class="InfoPointUI.Views.CardScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scanare Card"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="#88000000"
        ShowInTaskbar="False"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Loaded="Window_Loaded"  
        KeyDown="Window_KeyDown">

    <Grid Background="Transparent" MouseDown="Overlay_MouseDown">
        <!-- Panou central negru -->
        <Border Background="#AA000000"
                CornerRadius="12"
                Padding="24"
                Width="500"
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MouseDown="CenterPanel_MouseDown">
            <Grid>
                <!-- Buton X -->
                <Button Content="✕"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>

                <!-- Conținut -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- un singur card vectorial -->
                    <Grid Width="220" Height="140" Margin="0,0,0,20">
                        <!-- corp card -->
                        <Rectangle Fill="{StaticResource PharmacyGreen}" RadiusX="12" RadiusY="12"/>
                        <!-- bandă albă sus -->
                        <Rectangle Fill="WhiteSmoke" Height="30" VerticalAlignment="Top" RadiusX="12" RadiusY="12"/>
                        <TextBox x:Name="txtCardCode" Background="WhiteSmoke" BorderThickness="0" Height="30" 
                                 VerticalAlignment="Top" Margin="10, 0" 
                                 CaretBrush="Transparent"
                                 MaxLength="13"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 FontSize="16"
                                 LostFocus="txtCardCode_LostFocus"
                                 PreviewTextInput="txtCardCode_PreviewTextInput"
                                 PreviewKeyDown="txtCardCode_PreviewKeyDown"/>
                        <!-- cerc roșu ca simbol -->
                        <Ellipse Fill="{StaticResource DrMaxRed}" Width="32" Height="32"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Bottom"
                                 Margin="10"/>
                        <!-- text Dr.Max simplificat -->
                        <TextBlock Text="Dr.Max"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Text="SCANARE CARD CLIENT"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="UTILIZAȚI CARDUL PENTRU O EXPERIENȚĂ COMPLETĂ"
                               FontSize="15"
                               Foreground="LightGray"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
