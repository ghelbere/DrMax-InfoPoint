<Window x:Class="InfoPointUI.Views.NotificationOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotificationOverlay" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowState="Maximized"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        TouchDown="Window_TouchDown">

    <Grid>
        <!-- Fundal semi-transparent pentru întreaga fereastră -->
        <Grid Background="#80000000">

            <!-- Banda de notificare centrată -->
            <Border x:Name="NotificationBand"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    CornerRadius="10"
                    Padding="30"
                    MinWidth="400"
                    MaxWidth="600">

                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" 
                                      Opacity="0.6" 
                                      BlurRadius="20" 
                                      Color="Black"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Iconița -->
                    <TextBlock x:Name="IconTextBlock"
                               Grid.Row="0"
                               FontSize="36"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <!-- Titlul -->
                    <TextBlock x:Name="TitleTextBlock"
                               Grid.Row="1"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <!-- Mesajul -->
                    <TextBlock x:Name="MessageTextBlock"
                               Grid.Row="2"
                               FontSize="16"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>